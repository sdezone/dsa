class Solution {
    public int[] twoSum(int[] nums, int target) {
        int[] result=new int[2];
        int index=0;
        Arrays.sort(nums);
        while(index<nums.length-1){
            for(int i=1;i<nums.length;i++){
                
                if(nums[index]+nums[index+1]==target){
                    result[0]=index;
                    result[1]=index+1;                    
                }
                
            } 
            index++;
        }
        Arrays.sort(result);
        return result;
    }
}
